@model IEnumerable<Vinh_221231051.Models.HangHoa>
@if (Model != null)
{
	foreach (var item in Model)
	{
		<div class="grid_1_of_4 images_1_of_4">
			<a href="preview.html"><img src="~/images/@item.Anh" alt="" /></a>
			<h2>@item.TenHang</h2>
			<div class="price-details">
				<div class="price-number">
					<p><span class="rupees">@item.Gia</span></p>
				</div>
				<div class="add-cart">
					<h4><a href="preview.html">Add to Cart</a></h4>
				</div>
				<div class="clear">
					<a asp-controller="Home" asp-action="Edit" asp-route-id="@item.MaHang">Edit</a>
					<a asp-controller="Home" asp-action="Delete" asp-route-id="@item.MaHang">Delete</a>
				</div>
			</div>
		</div>
	}
}
else
{
	<p>No items to display.</p>
}
